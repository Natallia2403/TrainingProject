@model BookingSite.Web.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Редактирование пользователя";
}
    <form asp-action="Edit" asp-controller="Users">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div>
            <label asp-for="Email">Имя (Email)</label>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Year">Год рождения</label>
            <input asp-for="Year" />
            <span asp-validation-for="Year"></span>
        </div>
        <div>
            <label asp-for="FirstName">Имя</label>
            <input type="text" asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName">Фамилия</label>
            <input type="text" asp-for="LastName" />
        </div>
        <div>
            <input type="submit" value="Сохранить" />
        </div>
    </form>