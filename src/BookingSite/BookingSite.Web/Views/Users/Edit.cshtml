@model BookingSite.Web.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" />
    </div>
    <div>
        <label asp-for="Year">Год рождения</label>
        <input type="number" asp-for="Year" />
    </div>
    <div>
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>