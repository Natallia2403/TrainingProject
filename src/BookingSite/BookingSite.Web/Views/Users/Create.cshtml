@model BookingSite.Web.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Добавление пользователя";
}
    <form asp-action="Create" asp-controller="Users">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email">Имя (Email)</label>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Пароль</label>
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <label asp-for="Year">Год рождения</label>
            <input asp-for="Year" />
        </div>
        <div>
            <label asp-for="FirstName">Имя</label>
            <input type="text" asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName">Фамилия</label>
            <input type="text" asp-for="LastName" />
        </div>
        <div>
            <input type="submit" value="Добавить" />
        </div>
    </form>