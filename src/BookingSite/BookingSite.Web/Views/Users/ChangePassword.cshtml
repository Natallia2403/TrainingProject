@model BookingSite.Web.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div>
        <label asp-for="OldPassword">Старый пароль</label>
        <input asp-for="OldPassword" />
    </div>
    <div>
        <label asp-for="NewPassword">Новый пароль</label>
        <input asp-for="NewPassword" />
    </div>
    <div>
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>