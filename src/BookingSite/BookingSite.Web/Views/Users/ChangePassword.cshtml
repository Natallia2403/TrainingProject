@model BookingSite.Web.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Изменение пароля";
}
<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div>
        <label asp-for="OldPassword">Старый пароль</label>
        <input asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div>
        <label asp-for="NewPassword">Новый пароль</label>
        <input asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm">Новый пароль</label>
        <input asp-for="PasswordConfirm"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>