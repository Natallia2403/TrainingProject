@using BookingSite.Web.ViewModels
@model RegisterViewModel

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <label asp-for="Year"></label><br />
        <input asp-for="Year" />
    </div>
    <div>
        <label asp-for="FirstName"></label><br />
        <input asp-for="FirstName"/>
    </div>
    <div>
        <label asp-for="LastName"></label><br />
        <input asp-for="LastName"/>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>