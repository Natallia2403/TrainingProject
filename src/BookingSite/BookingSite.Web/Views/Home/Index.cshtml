@using BookingSite.Web.ViewModels
@using BookingSite.Data.Models

@model HomeViewModel
@{
    ViewData["Title"] = "Home Page Booking";
}



<form>
    <table>

        @foreach (var h in Model.Hotels)
        {
            <tr>
                <td>@h.Name</td>
                <td>
                    <a asp-action="HotelDetails" asp-controller="Home" asp-route-id="@h.Id">Подробнее</a>
                </td>
            </tr>
        }
    </table>
</form>
