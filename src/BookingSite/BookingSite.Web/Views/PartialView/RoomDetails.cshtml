@{
    ViewData["Title"] = "Описание комнаты";
}

<h3>Описание комнаты @Model.Description</h3>

<div>
    <dl>

        <dt>Отель</dt>
        <dd>@Model.Hotel.Name</dd>

        <dt>Максимальное число гостей</dt>
        <dd>@Model.MaxNumberOfGuests</dd>

        <dt>Цена</dt>
        <dd>@Model.Price</dd>

        <dt>Балкон</dt>
        <dd>@(Model.HasBalcony? "Да" : "Нет")</dd>

        <dt>Кухня</dt>
        <dd>@(Model.HasKitchen? "Да" : "Нет")</dd>
    </dl>
</div>