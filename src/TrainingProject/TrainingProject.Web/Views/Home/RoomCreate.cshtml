@using  TrainingProject.Data.Models

@model Room

@{
    ViewBag.Title = "Добавление Номера (Комнаты)";
}

    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="HotelId" value="@ViewBag.HotelId" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Описание</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Максимальное количество гостей</label>
            <input type="number" asp-for="MaxNumberOfGuests" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Цена</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Балкон</label>
            <input type="checkbox" asp-for="IsBalcony" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Кухня</label>
            <input type="checkbox" asp-for="IsKitchen" class="form-control" />
        </div>
        <br /><br />
        <input type="submit" value="Отправить" />
    </form>

