@using  TrainingProject.Web.ViewModels
@using  TrainingProject.Data.Models

@model RoomViewModel


@{
    ViewBag.Title = "Добавление Номера (Комнаты)";
}

    <form method="post">
        <div class="form-group">
            <label class="control-label">Отель:</label>
            <select name="HotelId">
                @foreach (Hotel hotel in Model.Hotels)
                {
                    <option value="@hotel.Id">@hotel.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">Описание</label>
            <input type="text" name="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Максимальное количество гостей</label>
            <input type="number" name="MaxNumberOfGuests" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Цена за ночь</label>
            <input type="number" name="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Балкон</label>
            <input type="checkbox" name="IsBalcony" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Кухня</label>
            <input type="checkbox" name="IsKitchen" class="form-control" />
        </div>
        <br /><br />
        <input type="submit" value="Отправить" />
    </form>

